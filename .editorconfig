# Description: project editing enforcement
#
# Settings:    tab size 2
#              tab expands to spaces (except makefile where <TAB>s are required)
#              utf-8 encoding
#              \n newline
#              empty line at the EOF

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

[makefile]
indent_style = tab
